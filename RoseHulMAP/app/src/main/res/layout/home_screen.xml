<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <ImageView
            android:layout_width="731dp"
            android:layout_height="516dp" app:srcCompat="@drawable/rose_old" tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="0dp" android:id="@+id/imageView2"/>
    <TextView
            android:text="My Rose \nMaps "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="141dp"
            tools:layout_editor_absoluteX="117dp" android:id="@+id/textView2" android:textSize="36sp"
            android:textStyle="bold" android:textColor="@android:color/white"/>
    <EditText
            android:layout_width="215dp"
            android:layout_height="33dp"
            android:inputType="textPassword"
            android:ems="10"
            tools:layout_editor_absoluteX="84dp" android:id="@+id/editText2"
            android:background="@android:color/white" android:hint="Password" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/editText3"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            tools:layout_editor_absoluteY="310dp" tools:layout_editor_absoluteX="84dp" android:id="@+id/editText3"
            android:background="@android:color/white" android:hint="Email Address"/>
    <TextView
            android:text="5500 Wabash Avenue\nTerre Haute IN, 47803"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="262dp"
            tools:layout_editor_absoluteX="124dp" android:id="@+id/textView3" android:textColor="@android:color/white"
            android:textStyle="bold"/>
    <Button
            android:text="Forgot your passcode?"
            android:layout_width="130dp"
            android:layout_height="30dp" tools:layout_editor_absoluteY="385dp"
            tools:layout_editor_absoluteX="169dp" android:id="@+id/button" android:textSize="8sp"/>
    <Button
            android:text="Login"
            android:layout_width="217dp"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="438dp"
            tools:layout_editor_absoluteX="82dp" android:id="@+id/button2"
            android:background="@android:color/holo_red_dark"/>
</android.support.constraint.ConstraintLayout>