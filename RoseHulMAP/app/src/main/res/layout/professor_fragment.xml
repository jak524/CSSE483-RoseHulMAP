<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:padding="12dp"
                android:layout_height="match_parent"
>

    <ImageView
            android:id="@+id/image_view"
            android:layout_marginHorizontal="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:scaleType="fitCenter"
            android:src="@android:drawable/sym_def_app_icon" />

    <TextView
            android:id="@+id/professor_name_view"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/image_view"
            android:text="replace me :)"
            android:textSize="24sp"/>

    <TextView
            android:id="@+id/professor_bio_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/professor_name_view"
            android:text="replace me :)"
            android:textSize="24sp"/>

    <TextView
            android:id="@+id/professor_office_number_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/professor_bio_view"
            android:text="replace me :)"
            android:textSize="24sp"/>

    <TextView
            android:id="@+id/professor_building_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/professor_office_number_view"
            android:text="replace me :)"
            android:textSize="24sp"/>

</RelativeLayout>